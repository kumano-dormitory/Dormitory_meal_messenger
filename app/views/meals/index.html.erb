<p id="notice"><%= notice %></p>

<h1>Meals</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time zone</th>
      <th>Menu</th>
      <th>Multi ticket price</th>
      <th>Single ticket price</th>
      <th>Soldout</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.date %></td>
        <td><%= meal.time_zone %></td>
        <td><%= meal.menu %></td>
        <td><%= meal.multi_ticket_price %></td>
        <td><%= meal.single_ticket_price %></td>
        <td><%= meal.soldout %></td>
        <td><%= link_to 'Show', meal %></td>
        <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
        <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

